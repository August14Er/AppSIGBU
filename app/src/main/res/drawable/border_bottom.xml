<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Este es el item que dibuja la línea -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <!-- Define el grosor y color de la línea -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Puedes cambiar este color al que prefieras -->
        </shape>
    </item>

</layer-list>
