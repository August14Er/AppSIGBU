<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Trabajador"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/etDni"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_field_filled"
            android:hint="DNI (8 dígitos)"
            android:inputType="number"
            android:maxLength="8"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etNombres"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_field_filled"
            android:hint="Nombres"
            android:inputType="textPersonName|textCapWords"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false">
            <EditText
                android:id="@+id/etPaterno"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:background="@drawable/bg_field_filled"
                android:hint="Ap. Paterno"
                android:inputType="textPersonName|textCapWords"
                android:paddingHorizontal="16dp"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/etMaterno"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:background="@drawable/bg_field_filled"
                android:hint="Ap. Materno"
                android:inputType="textPersonName|textCapWords"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_field_filled"
            android:hint="Correo Electrónico (Usuario)"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_field_filled"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnGuardarWorker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="GUARDAR TRABAJADOR"
            android:backgroundTint="#0D6EFD"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>